doctype html
html
  head
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title #{__('TITLE', community)}
    link(href="css/style.css", rel="stylesheet", type="text/css")
    link(href="//fonts.googleapis.com/css?family=Lato:300,400,700,900,700italic|Open+Sans:700italic,400,600,300,700,800", rel="stylesheet", type="text/css")
  body
    .overlay
    #wrapper
      .content
        .header
          .logo
            img(src="images/logo.svg")
            h1 #{community}
          p(class=isFailed?'error':'') !{message}
  script.
    var bgArray=[1,2,3,4,5];
    var randomBgClass = "bg"+bgArray[Math.floor(Math.random() * bgArray.length)]
    document.body.classList.add(randomBgClass)
